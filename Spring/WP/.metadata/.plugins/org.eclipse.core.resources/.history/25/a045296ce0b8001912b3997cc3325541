package bank.server.internal;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import bank.server.Bank;

public class TestBank {

	public static void main(String[] args) {
		AccountRepositoryImpl a = new AccountRepositoryImpl();
		Bank c =Bank.getInstance(a,1234);
		ApplicationContext ctx = new ClassPathXmlApplicationContext("application-config.xml");
		Bank b =(Bank) ctx.getBean("bankService");
		System.out.println(b.withdraw(50, 1234));
		((AbstractApplicationContext) ctx).close();
	}

}
