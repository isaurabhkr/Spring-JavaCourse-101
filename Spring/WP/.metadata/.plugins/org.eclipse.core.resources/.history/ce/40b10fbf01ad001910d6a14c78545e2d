package collections;
import java.util.Stack;
import java.util.Iterator;

public class TestStack {

	public static void main(String[] args) {
	Stack stck = new Stack<>();
	//generic way of creating a stack, not recommended
	Stack<Integer> stckI = new Stack<Integer>();
	Stack<Integer> stckIn = new Stack<>();
		for(int i=0;i<200;i+=40)
		{
		stckI.push(i);
		}
		System.out.println("After push");
		for(int i=0;i<stckI.size();i++)
		{
		System.out.println(stckI.elementAt(i));
		}
		stckI.pop();
		System.out.println("After pop:");
		for(int i=0;i<stckI.size();i++)
		{
		System.out.println(stckI.elementAt(i));
		}
		/* just for displaying the values: for each loop
		for(int val:stckI)
		{
		System.out.println(val);
		}
		*/
		System.out.println("Using Iterator:");
		Iterator<Integer> itr = stckI.iterator();
		while(itr.hasNext()) {
			//int val=(int) itr.next();
			int val= itr.next();
			System.out.println(val);
		}
		System.out.println("Stack contains 0 "+ stckI.contains(0));
	}

}
