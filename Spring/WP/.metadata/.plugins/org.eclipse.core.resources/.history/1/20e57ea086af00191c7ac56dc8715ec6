package com.hsbc.test;

import java.util.*;
import org.apache.derby.tools.sysinfo;

import com.hsbc.models.Student;
import com.hsbc.services.StudentService;
import com.hsbc.services.impl.StudentServiceImpl;

public class StudentJDBC {

	public static void main(String[] args) {
	StudentService studentservice = new StudentServiceImpl();
	studentservice.create(new Student(1,"Narendra","Modi",78.98));
	studentservice.create(new Student(2,"Sonia","Gandhi",88.98));
	studentservice.create(new Student(3,"Rahul","Gandhi",86.98));

	
	System.out.println("-------------------------");
	System.out.println(studentservice.get(4));
	System.out.println("-------------------------");

	ArrayList<Student> studlist= new ArrayList();
	studlist=(ArrayList<Student>) studentservice.getAll();
	for(Student stud :studlist)
	System.out.println(stud);
	studentservice.remove(1);
	studentservice.remove(2);
	studentservice.remove(3);

	studlist= new ArrayList();
	studlist=(ArrayList<Student>) studentservice.getAll();
	for(Student stud :studlist)
	System.out.println(stud);
	}

}
