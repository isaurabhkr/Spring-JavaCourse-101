package com.goodsteam;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebInitParam;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

/**
 * Servlet implementation class handlein
 */
@WebServlet(name = "handlein", urlPatterns = {"/handlein"}, initParams={
@WebInitParam(name="sum", value="0"), 
@WebInitParam(name="avg", value="0"),
@WebInitParam(name="count", value="0")})
public class handlein extends HttpServlet {
	private static final long serialVersionUID = 1L;
  
    public handlein() {
        super();
        // TODO Auto-generated constructor stub
    }


	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}


	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		  	response.setContentType("text/html");
	       
	        int in =  Integer.parseInt(request.getParameter("id"));
	        int count= Integer.parseInt((String) request.getAttribute("count"));
	        int sum = Integer.parseInt((String) request.getAttribute("sum"));
	        double avg = Double.parseDouble((String) request.getAttribute("avg"));
	        System.out.println("count "+count);
	        System.out.println("sum "+sum);
	        System.out.println("avg "+avg);
	        sum=sum+in;
	        count=count+1;
	        double newavg = sum/count;
	        request.setAttribute("count",count);
	        request.setAttribute("avg",avg);
	        request.setAttribute("sum",sum);
	        
	        RequestDispatcher rd = request.getRequestDispatcher("welcome.html");
	        rd.forward(request, response);
	        

	       
	}

}
