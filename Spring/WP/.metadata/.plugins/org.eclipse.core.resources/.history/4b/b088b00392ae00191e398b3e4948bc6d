package com.date;

import java.util.Date;
import java.util.*;
import java.text.*;

public class SimpleDateFormatExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SimpleDateFormatExample sdf = new SimpleDateFormatExample("dd/M/yyyy");
		String date = (String) sdf.format(new Date()); 
		System.out.println(date); //15/10/2013
		
		sdf = new SimpleDateFormatExample("dd-M-yyyy hh:mm:ss");
		String dateInString = "31-08-1982 10:20:56";
		Date date = sdf.parse(dateInString);
		System.out.println(date); //Tue Aug 31 10:20:56 SGT 1982
		
		SimpleDateFormatExample dateFormat = new SimpleDateFormatExample("yyyy/MM/dd HH:mm:ss");
		 date = new Date();
		System.out.println(dateFormat.format(date)); //2013/10/15 16:16:39
	}

}
